{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["owners", "source", "confidence"],
  "properties": {
    "owners": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "share"],
        "properties": {
          "name": {"type": "string"},
          "share": {"type": "number", "minimum": 0, "maximum": 100}
        }
      }
    },
    "source": {"type": "string"},
    "confidence": {"type": "number", "minimum": 0, "maximum": 1}
  }
}
